@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "User", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
               @Html.ActionLink( User.Identity.Name + "!", "EditByName", "User", new { User.Identity.Name }, htmlAttributes: new { title = "Manage" })
            </li>
            <li>@Html.ActionLink("Sign Out", "SignOut", "User")</li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Create", "User", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        @*<li>@Html.ActionLink("Sign in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>*@

        <li style="margin-top:9px">
            <div class="dropdown">
                <button class="btn btn-link dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
                    Sign In
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu" aria-labelledby="menu1" style="min-width: 315px; ">
                    <form action="/User/LogIn"  class="form-horizontal" method="post" style="margin: 5px 15px 11px 30px;">
                        <div class="form-group">
                            <label for="exampleInputEmail1">User Name</label>
                            <input type="text" class="form-control" id="UserName" name="UserName" placeholder="UserName">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Password">
                        </div>
                        <div class="checkbox" style="margin-left: -13px; margin-top:-11px;  margin-bottom: 10px">
                            <label>
                                <input type="checkbox" name="RememberMe" value="true" id="RememberMe"> Remember me
                            </label>
                        </div>
                        <button style="margin-left: -13px;" type="submit" class="btn btn-default">Submit</button>
                    </form>
                </ul>
            </div>
        </li>
    </ul>
}
