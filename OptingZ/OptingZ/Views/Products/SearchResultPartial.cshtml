@model IEnumerable<OptingZ.Models.ProductMaster>

<div class="col-md-6">
    <div class="list-group">
        @foreach (var item in Model.Take(5))
        {
            <div class="list-group-item">
                <div class="col-xs-4 col-md-2 thumbnail" style="margin:0px 10px 0px 0px;">
                    <img src="https://lh3.googleusercontent.com/-mzaOidqc2g0/AAAAAAAAAAI/AAAAAAAAAF4/ilvw0c_UA-w/s120-c/photo.jpg" alt="...">
                </div>
                <span class="badge" >@Html.DisplayFor(modelItem => item.Views)</span>
                <h4 class="list-group-item-heading">@Html.DisplayFor(modelItem => item.Name)</h4>
                <p class="list-group-item-text">@Html.DisplayFor(modelItem => item.SDescription)</p>
                <a href="@item.Website" target="_blank">@Html.DisplayFor(modelItem => item.Website)</a>
                <br />
                <a style="margin-left: 500px" href="#">detail</a>
            </div>
        }
    </div>
</div>
