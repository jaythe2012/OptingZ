@model IEnumerable<OptingZ.Models.ProductMaster>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var pagedlist = (PagedList.IPagedList)Model;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.SDescription)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.IsMultipleCategory)
        </th>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.Website)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="col-md-3">
                @Html.DisplayFor(modelItem => item.SDescription)
            </td>
            <td class="col-md-1">
                @Html.DisplayFor(modelItem => item.IsMultipleCategory)
            </td>
            <td class="col-md-3">
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            <td class="col-md-3">
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>
Page @(pagedlist.PageCount < pagedlist.PageNumber ? 0 : pagedlist.PageNumber) of @pagedlist.PageCount

@Html.PagedListPager(pagedlist, page => Url.Action("Index",new { page = page}))
